#include <iostream>
#include <string>

using namespace std;

void Greeting()
{
	cout << "Hello World!\n";
}

string NameChecker()
{
	string name;

	cout << "Please enter your name:\n";
	cin >> name;
	cout << "Hello ";
	cout << name+"\n";

	return name;
}

int AgeChecker()
{
	int age;

	cout << "Please enter your age for evaluation:";
	cin >> age;

	if (age <= 18) {
		cout << "You are a teenager\n";
		cout << age;
	}
	else if (age > 50 and age < 100) {
		cout << "You are an elder sir.\n";
		cout << "you are ";
		cout << age;
		cout << " years old.";
	}
	else if (age >= 100) {
		cout << "Are you really ";
		cout << age;
		cout << "?";
	}

	return age;
}

int main()
{
	Greeting();
	NameChecker();
	AgeChecker();

	return 0;
}
